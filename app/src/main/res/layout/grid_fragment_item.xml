<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:padding="10dp">


    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/productImage"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="Sample"
        android:id="@+id/product_text"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/productImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price"
        android:id="@+id/gridPrice"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/product_text"
        android:layout_alignLeft="@+id/product_text"
        android:layout_alignStart="@+id/product_text"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_alignRight="@+id/product_text"
        android:layout_alignEnd="@+id/product_text" />

</RelativeLayout>